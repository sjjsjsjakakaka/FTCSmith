        */

        telemetry.addData("Status", "Initialized");
        telemetry.update();
        
        waitForStart();
        while (opModeIsActive()) {
            motor.setPower(gamepad1.left_stick_y);
            telemetry.addData("controllerY", gamepad1.left_stick_y);
            telemetry.addData("controllerX", gamepad1.left_stick_x);
            telemetry.update();
            
